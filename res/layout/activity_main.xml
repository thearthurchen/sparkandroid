<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.spark.MainActivity" >

    <ImageButton
        android:id="@+id/getSpark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addSpark"
        android:layout_alignTop="@+id/addSpark"
        android:layout_marginTop="96dp"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        android:background="@null"
        android:clickable="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/submit"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/cookSpark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/getSpark"
        android:layout_below="@+id/getSpark"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        android:background="@null"
        android:clickable="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/submit"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/addSpark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        android:background="@null"
        android:clickable="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/submit"
        android:textSize="30sp" />
    
    <ImageButton
        android:id="@+id/stopSpark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cookSpark"
        android:layout_below="@+id/cookSpark"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        android:background="@null"
        android:clickable="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/submit"
        android:textSize="30sp" />

</RelativeLayout>
